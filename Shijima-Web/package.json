{
  "name": "shijima-web",
  "version": "1.0.0",
  "description": "Desktop mascots for the web - animated characters that walk, fall, and interact on your website",
  "main": "dist/shijima.js",
  "module": "src/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./dist/shijima.cjs"
    }
  },
  "files": [
    "src/",
    "dist/",
    "demo/"
  ],
  "scripts": {
    "build": "esbuild src/index.js --bundle --format=iife --global-name=Shijima --outfile=dist/shijima.js",
    "build:esm": "esbuild src/index.js --bundle --format=esm --outfile=dist/shijima.esm.js",
    "build:cjs": "esbuild src/index.js --bundle --format=cjs --outfile=dist/shijima.cjs",
    "build:min": "esbuild src/index.js --bundle --format=iife --global-name=Shijima --minify --outfile=dist/shijima.min.js",
    "build:all": "npm run build && npm run build:esm && npm run build:cjs && npm run build:min",
    "serve": "npx http-server . -p 8080 -c-1"
  },
  "keywords": [
    "mascot",
    "shimeji",
    "desktop-pet",
    "animation",
    "web-mascot",
    "shijima",
    "character",
    "pet"
  ],
  "author": "",
  "license": "GPL-3.0",
  "homepage": "https://github.com/cypherpunk2001/Shijima-Web#readme",
  "bugs": {
    "url": "https://github.com/cypherpunk2001/Shijima-Web/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cypherpunk2001/Shijima-Web.git"
  },
  "devDependencies": {
    "esbuild": "^0.20.0"
  }
}
